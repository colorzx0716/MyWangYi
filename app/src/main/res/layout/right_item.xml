<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#000000"
        android:layout_height="300dp">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <ImageView
                android:id="@+id/r_touxiang"
                android:layout_width="wrap_content"
                android:src="@drawable/r_touxiang"
                android:layout_height="100dp" />
        </LinearLayout>



        <TextView
            android:id="@+id/qq_name"
            android:layout_marginTop="10dp"
            android:text="立即登录"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="20dp"
            android:text="赢积分 抢大奖"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#ffff00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

<LinearLayout
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="80dp">
        <ImageView
            android:src="@drawable/r_yuedu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="阅读"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="80dp">
        <ImageView
            android:src="@drawable/r_shoucang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="收藏"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="80dp">
        <ImageView
            android:src="@drawable/r_gentie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="跟帖"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>
    </LinearLayout>

   <!-- 下面是空白展示-->
    <RelativeLayout
        android:background="@color/bg_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 下面是条目展示-->
    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:scaleType="centerCrop"
            android:src="@drawable/r_shangcheng"
            android:layout_width="50dp"
            android:layout_height="80dp" />
        <TextView
            android:layout_marginLeft="30dp"
            android:text="商城"
            android:textSize="25sp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="80dp" />

        <TextView
            android:layout_marginLeft="20dp"
            android:text="能赚能花，土豪当家"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp" />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/lin2"
           android:layout_below="@+id/lin1"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/r_huodong"
                android:layout_width="50dp"
                android:layout_height="80dp" />
            <TextView
                android:layout_marginLeft="30dp"
                android:text="活动"
                android:textSize="25sp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="80dp" />

            <TextView
                android:layout_marginLeft="20dp"
                android:text="大人，这是你的SSR吗？"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin3"
            android:layout_below="@+id/lin2"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/r_youxi"
                android:layout_width="50dp"
                android:layout_height="80dp" />
            <TextView
                android:layout_marginLeft="30dp"
                android:text="游戏"
                android:textSize="25sp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="80dp" />

            <TextView
                android:layout_marginLeft="20dp"
                android:text="部落冲突：皇室战争来袭"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp" />
        </LinearLayout>



<!--下面是底部-->

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="80dp">
            <ImageView
                android:src="@drawable/b_shangtoutiao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="上头条"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="80dp">
            <ImageView
                android:src="@drawable/b_xiaoxi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="消息"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="80dp">
            <ImageView
                android:src="@drawable/b_youjian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="邮件"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="80dp">
            <ImageView
                android:src="@drawable/b_gongyi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="公益"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="80dp">
            <ImageView
                android:src="@drawable/b_caipiao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="彩票"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout><!--底部-->


    </RelativeLayout>


</LinearLayout>
